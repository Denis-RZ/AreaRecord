@model IEnumerable<MyWebApp.Models.DownloadFile>
@{
    ViewData["Title"] = "Download";
}

<h1>Downloads</h1>

<p>Total downloads: @ViewBag.TotalDownloads</p>

<ul class="download-list">
    @foreach (var f in Model)
    {
        <li class="download-item">
            <div class="download-info">
                <strong>@f.FileName</strong> - @Html.Raw(f.Description)
            </div>
            <form method="post" asp-controller="Download" asp-action="Index" class="download-form">
                <input type="hidden" name="token" class="captcha-token" />
                <input type="hidden" name="fileId" value="@f.Id" />
                <button class="download-btn" type="submit" disabled>Download</button>
            </form>
        </li>
    }
</ul>

<div class="validation-summary">
    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <p class="text-danger">@error.ErrorMessage</p>
    }
</div>

@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js?render=@ViewBag.SiteKey"></script>
    <script>
        grecaptcha.ready(function () {
            grecaptcha.execute('@ViewBag.SiteKey', { action: 'download' }).then(function (token) {
                document.querySelectorAll('.captcha-token').forEach(function (el) {
                    el.value = token;
                });
                document.querySelectorAll('.download-btn').forEach(function (btn) {
                    btn.disabled = false;
                });
            });
        });
    </script>
}
