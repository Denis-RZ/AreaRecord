@model IEnumerable<MyWebApp.Models.Media>
@{
    ViewData["Title"] = "Media";
    Layout = "../Admin/_AdminLayout";
}
<h2>Media Library</h2>
<p><a asp-action="Upload">Upload File</a></p>
<table class="table table-sm">
    <thead>
        <tr><th>File</th><th>Size</th><th></th></tr>
    </thead>
    <tbody>
    @foreach(var m in Model)
    {
        <tr>
            <td>@m.FileName</td>
            <td>@String.Format("{0:N0}", m.Size)</td>
            <td><a href="@m.FilePath" target="_blank">View</a></td>
        </tr>
    }
    </tbody>
</table>
